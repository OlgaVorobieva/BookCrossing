@using BookCrossingApp.ViewModels

@model EditProfileViewModel

@{
    ViewData["Title"] = "EditProfile";
}

<div class="main-container">
    <section class="bg-white space-sm pb-4">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h1 class="h2">Настройки профиля</h1>
                </div>
                <!--end of col-->
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
    <!--end of section-->

    <section class="flush-with-above height-80 d-block">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="profile" role="tabpanel">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="media flex-wrap mb-0 align-items-center">
                                @{
                                    var imageUrl = string.IsNullOrEmpty(Model.ProfileImageUrl)
                                    ? "/img/default.jpg"
                                    : Model.ProfileImageUrl;
                                }
                                <img alt="Image" src="@imageUrl" class="avatar avatar-lg mb-3 mb-md-0" />
                                <div class="media-body">
                                    <form asp-action="EditProfile" enctype="multipart/form-data">
                                        <label asp-for="Image" class="custom-file mb-2" for="file2">
                                            <input asp-for="Image" type="file" id="file2" class="custom-file-input height-0" oninput="submitProfileImage();" />
                                            <span class="btn btn-primary"><i class="icon-upload-to-cloud">&nbsp;</i>Загрузить</span>
                                            <span asp-validation-for="Image" class="text-danger"></span>
                                            <button id="submit-image-button" type="submit" hidden></button>
                                        </label>
                                        <div>
                                            <small>Для лучшего результата, используйте фото 256px на 256px в формате .jpg или .png</small>
                                        </div>

                                    </form>
                                </div>
                            </div>
                        </div>
                        <!--end of col-->
                    </div>
                    <!--end of row-->
                    <hr />
@*                    <div class="row mb-4">
                        <div class="col">
                            <h5>Profile Information</h5>
                        </div>
                        <!--end of col-->
                    </div>*@
                    <!--end of row-->
                    <div class="row">
                        <!--end of col-->
                        <div class="col-12 col-md-8 order-md-1">
                            <form asp-action="EditProfile" method="post" class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="fname">Имя пользователя:</label>
                                        <input type="text" id="fname" name="fname" value="Юлия"><br>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Сохранить изменения</button>
                                    </div>
                                </div>
                                <hr />
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="fn1">Текущий пароль:</label>
                                        <input type="text" id="fn1" name="fname"><br>
                                        <label for="fn2">Новый пароль:</label>
                                        <input type="text" id="fn2" name="fname"><br>
                                        <label for="fn3">Повторите новый пароль:</label>
                                        <input type="text" id="fn3" name="fname"><br>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <button class="btn btn-primary" type="submit">Сохранить изменения</button>
                                    </div>
                                </div>


                            </form>
                        </div>
                        <!--end of col-->
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </div>
            <!--end of tab pane-->

        </div>
        <!--end of tabs content-->
    </section>
    <!--end of section-->
</div>


<script type="text/javascript">
    function submitProfileImage() {
        document.getElementById("submit-image-button").click();
    }
</script>