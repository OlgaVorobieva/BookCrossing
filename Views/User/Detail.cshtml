@using BookCrossingApp.ViewModels

@model UserDetailViewModel

@{
    ViewData["Title"] = "Profile";
}

<div class="main-container">
    <section class="bg-white space-sm pb-4">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-auto">
                    <h1 class="h2">Account</h1>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="media flex-wrap mb-0 align-items-center">
                        @{
                            var imageUrl = string.IsNullOrEmpty(Model.ProfileImageUrl)
                            ? "/img/default.jpg"
                            : Model.ProfileImageUrl;
                        }
                        <img alt="Image" src="@imageUrl" class="avatar avatar-lg mb-3 mb-md-0" width="80" height="80" />
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">
                    <h5>Username : </h5>
                    @Html.DisplayFor(modelItem => Model.UserName)
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-md-8 order-md-1">
                    <h5>Your books</h5>
                </div>
            </div>
        </div>
    </section>

</div>


